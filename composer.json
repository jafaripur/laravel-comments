{
    "name": "jafaripur/laravel-comment",
    "description": "Commenting system in laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Araz Jafaripur",
            "email": "mjafaripur@yahoo.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "illuminate/support": ">=4.1 <6.0"
    },
    "suggest": {
        "illuminate/database": "Save settings to a database table."
    },
    "require-dev": {
        "mockery/mockery": "0.9.*",
        "illuminate/database": ">=4.1 <6.0",
        "illuminate/filesystem": ">=4.1 <6.0"
    },
    "autoload": {
        "psr-4": {
            "jafaripur\\LaravelComments\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
